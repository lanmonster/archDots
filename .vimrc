set nocompatible

set ruler

set magic

set showmatch
set mat=2

set noerrorbells

syntax enable

set number
set relativenumber

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set ai
set si

set laststatus=2

noremap <Up> <NOP>
inoremap <Up> <NOP>
noremap <Down> <NOP>
inoremap <Down> <NOP>
noremap <Left> <NOP>
inoremap <Left> <NOP>
noremap <Right> <NOP>
inoremap <Right> <NOP>
